{
	"name": "VA page checker",
	"version": "1.0.0",
	"description": "Highlights VA web components and accessibility issues",
	"homepage_url": "https://github.com/Mottie/va-page-checker",
	"manifest_version": 3,
	"minimum_chrome_version": "100",
	"browser_specific_settings": {
		"gecko": {
			"id": "va-page-checker@mottie.github.io",
			"strict_min_version": "100.0"
		}
	},
	"icons": {
		"128": "octo-on.png"
	},
	"action": {
    "default_icon": "octo-off.png",
    "browser_style": true
  },
	"permissions": [
		"scripting",
		"tabs"
	],
	"host_permissions": [
		"https://*.va.gov/*"
	],
	"content_scripts": [
		{
			"matches": [ "https://*.va.gov/*" ],
			"js": [
				"build-css.js",
				"content.js"
			 ],
			"run_at": "document_end"
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}
